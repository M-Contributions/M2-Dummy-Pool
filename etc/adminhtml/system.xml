<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="ticaje_dummy" translate="label" sortOrder="150">
            <label>Dummy Vendor by Ticaje</label>
        </tab>
        <section id="dummy_config" translate="label" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="0">
            <class>separator-top</class>
            <label>Some Module</label>
            <tab>ticaje_dummy</tab>
            <resource>Ticaje_Dummy::dummy_config</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1"
                   showInStore="0">
                <label>General</label>
                <field id="enabled" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1"
                       showInStore="0">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="debug_mode" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1"
                       showInStore="0">
                    <label>Debug Mode</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
            <group id="connector" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1"
                   showInStore="0">
                <label>API Settings</label>
                <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1"
                       showInStore="0">
                    <label>General</label>
                    <field id="production_environment" translate="label" type="select" sortOrder="1" showInDefault="1"
                           showInWebsite="1" showInStore="0">
                        <label>Production Environment</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    </field>
                    <field id="base_uri" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1"
                           showInStore="0">
                        <label>Base URI</label>
                    </field>
                </group>
            </group>
        </section>
    </system>
</config>
